
<p id="notice"><%= notice %></p>

<h1 class="head-title">Rewards</h1>
<table class="styled-table table-content-center">
  <thead>
    <tr>
      <th>Id</th>
      <th>Rewards</th>
      <th>Rewards Created</th>
      <th>Rewards Expiration</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% if @user_rewards.present? %>
      <% @user_rewards.each do |user_reward| %>
        <tr>
          <td><%= user_reward.reward.id %></td>
          <td><%= user_reward.reward.name %></td>
          <td><%= user_reward.created_at.strftime('%F') %></td>
          <td><%= (user_reward.reward.created_at + 1.year).strftime('%F') %></td>
          <td><%= user_reward.status.titleize %></td>
        </tr>
      <% end %>
    <% else %>
    <tr>
      <td colspan='5' class="test-position"> No Records Found</td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
